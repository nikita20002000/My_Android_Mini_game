<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_button">
        <item name="android:background">@drawable/style_button</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="style_popup_button">
        <item name="android:background">@drawable/style_popup_button</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#040101</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>